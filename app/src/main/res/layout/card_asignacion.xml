<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="5dp"
    android:orientation="vertical">
    <TextView
        android:id="@+id/tv_nro"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Nombres"
        android:gravity="center"
        android:textColor="@color/colorBlack"
        android:textSize="@dimen/textParrafoGrande"
        android:layout_marginVertical="2dp"
        android:background="@drawable/button_secondary_plumb_light"
        />

    <TextView
        android:id="@+id/tv_cliente"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Nombres"
        android:textColor="@color/colorBlack"
        android:textSize="@dimen/textParrafo"
        android:layout_marginVertical="3dp"
        />
    <TextView
        android:id="@+id/tv_direccion"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Direccion"
        android:textColor="@color/colorPlumbDark"
        android:textSize="@dimen/textParrafo"
        android:layout_marginVertical="3dp"
        />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginVertical="5dp"
        >
        <Button
            android:id="@+id/btn_detalle"
            android:layout_width="match_parent"
            android:layout_height="@dimen/heightButtonPequeño"
            android:background="@drawable/button_secondary"
            android:layout_marginRight="10dp"
            android:text="Detalle"
            android:textAllCaps="false"
            android:textColor="@color/colorPrimary"
            android:textSize="@dimen/textParrafo"
            android:layout_weight="1"
            />
        <Button
            android:id="@+id/btn_lecturar"
            android:layout_width="match_parent"
            android:layout_height="@dimen/heightButtonPequeño"
            android:background="@drawable/button_secondary"
            android:layout_marginLeft="10dp"
            android:text="Lecturar"
            android:textAllCaps="false"
            android:textColor="@color/colorPrimary"
            android:textSize="@dimen/textParrafo"
            android:layout_weight="1"
            />
        <Button
            android:id="@+id/btn_imprimir"
            android:layout_width="match_parent"
            android:layout_height="@dimen/heightButtonPequeño"
            android:background="@drawable/button_secondary"
            android:layout_marginLeft="10dp"
            android:text="Imprimir"
            android:textAllCaps="false"
            android:textColor="@color/colorPrimary"
            android:textSize="@dimen/textParrafo"
            android:layout_weight="1"
            />
    </LinearLayout>
</LinearLayout>

