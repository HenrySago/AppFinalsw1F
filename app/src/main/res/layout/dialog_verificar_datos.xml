<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    app:cardUseCompatPadding="true">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="@dimen/heightButtonPequeño"
        android:layout_marginVertical="@dimen/heightButtonPequeño"
        android:orientation="vertical">



        <TextView
            android:id="@+id/tv_titulo"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginVertical="2dp"
            android:text="Verifique los datos"
            android:gravity="center"
            android:textColor="@color/colorBlack"
            android:textSize="@dimen/textParrafoGrande" />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="40dp"
            >
            <TextView
                android:id="@+id/tv_titulo_consumo_lecturado"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginVertical="2dp"
                android:text="Consumo lecturado"
                android:textColor="@color/colorBlack"
                android:textSize="@dimen/textParrafo"
                android:layout_weight="1"
                />

            <TextView
                android:id="@+id/tv_consumo_lecturado"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginVertical="2dp"
                android:text="10300 m3"
                android:gravity="end"
                android:textColor="@color/colorPlumbDark"
                android:textSize="@dimen/textParrafo"
                android:layout_weight="1"
                />
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            >
            <TextView
                android:id="@+id/tv_titulo_consumo"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginVertical="2dp"
                android:text="Consumo real"
                android:textColor="@color/colorBlack"
                android:textSize="@dimen/textParrafo"
                android:layout_weight="1"
                />

            <TextView
                android:id="@+id/tv_consumo"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginVertical="2dp"
                android:text="10300 m3"
                android:gravity="end"
                android:textColor="@color/colorPlumbDark"
                android:textSize="@dimen/textParrafo"
                android:layout_weight="1"
                />
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            >
            <TextView
                android:id="@+id/tv_titulo_costo"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginVertical="2dp"
                android:text="Costo"
                android:textColor="@color/colorBlack"
                android:textSize="@dimen/textParrafo"
                android:layout_weight="1"
                />

            <TextView
                android:id="@+id/tv_costo"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginVertical="2dp"
                android:text="120 Bs"
                android:gravity="end"
                android:textColor="@color/colorPlumbDark"
                android:textSize="@dimen/textParrafo"
                android:layout_weight="1"
                />
        </LinearLayout>
        <TextView
            android:id="@+id/tv_titulo_facturacion"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginVertical="2dp"
            android:text="Cliente"
            android:textColor="@color/colorBlack"
            android:textSize="@dimen/textParrafo" />

        <TextView
            android:id="@+id/tv_nit"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginVertical="2dp"
            android:text="Nit"
            android:textColor="@color/colorPlumbDark"
            android:textSize="@dimen/textParrafo" />
        <TextView
            android:id="@+id/tv_nombre"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginVertical="2dp"
            android:text="Nombre"
            android:textColor="@color/colorPlumbDark"
            android:textSize="@dimen/textParrafo" />
        <TextView
            android:id="@+id/tv_titulo_direccion"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginVertical="2dp"
            android:text="Dirección"
            android:textColor="@color/colorBlack"
            android:textSize="@dimen/textParrafo" />

        <TextView
            android:id="@+id/tv_direccion"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginVertical="2dp"
            android:text="Nombre completo"
            android:textColor="@color/colorPlumbDark"
            android:textSize="@dimen/textParrafo" />



        <Button
            android:id="@+id/btn_generar_factura"
            android:layout_width="match_parent"
            android:layout_height="@dimen/heightButtonMedianoConSombra"
            android:layout_marginTop="30dp"
            android:background="@drawable/button_primary"
            android:text="Generar factura"
            android:textAllCaps="false"
            android:textColor="@color/colorWhite"
            android:textSize="@dimen/textParrafo"
            />

        <Button
            android:id="@+id/btn_cancelar"
            android:layout_width="match_parent"
            android:layout_height="@dimen/heightButtonMedianoConSombra"
            android:background="@drawable/button_secondary"
            android:text="Cancelar"
            android:textAllCaps="false"
            android:textColor="@color/colorPrimary"
            android:textSize="@dimen/textParrafo"
            android:layout_marginTop="15dp"
            android:layout_marginBottom="10dp"
            />

    </LinearLayout>
</LinearLayout>
