<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:layout_marginHorizontal="@dimen/activity_horizontal_margin"
    >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginBottom="5dp"
        android:layout_marginTop="20dp"
        android:gravity="center"
        >
        <LinearLayout
            android:id="@+id/ly_pendiente"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginRight="10dp"
            >
            <TextView
                android:id="@+id/tv_pendiente"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Pendientes"
                android:textColor="@color/colorBlack"
                android:textSize="@dimen/textParrafoGrande"
                android:layout_marginHorizontal="12dp"
                />
            <TextView
                android:id="@+id/tv_pendiente_selected"
                android:layout_width="match_parent"
                android:layout_height="2dp"
                android:background="@color/colorPrimary"
                />
        </LinearLayout>
        <LinearLayout
            android:id="@+id/ly_pagado"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginLeft="10dp"
            >
            <TextView
                android:id="@+id/tv_pagado"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Pagados"
                android:textColor="@color/colorBlack"
                android:textSize="@dimen/textParrafoGrande"
                android:layout_marginHorizontal="12dp"
                />
            <TextView
                android:id="@+id/tv_pagado_selected"
                android:layout_width="match_parent"
                android:layout_height="2dp"
                android:background="@color/colorPrimary"
                />
        </LinearLayout>


    </LinearLayout>
    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rv_factura"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="15dp"
        >

    </androidx.recyclerview.widget.RecyclerView>

</LinearLayout>