<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:layout_marginHorizontal="@dimen/activity_horizontal_margin"
    >

    <TextView
        android:id="@+id/tv_titulo_perfil"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Foto de perfil"
        android:textColor="@color/colorBlack"
        android:textSize="@dimen/textParrafo"
        android:layout_marginBottom="5dp"
        android:layout_marginTop="20dp"
        />

    <ImageView
        android:id="@+id/iv_perfil"
        android:layout_width="120dp"
        android:layout_height="120dp"
        android:layout_marginVertical="15dp"
        />

    <TextView
        android:id="@+id/tv_titulo_nombres"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Nombres"
        android:textColor="@color/colorBlack"
        android:textSize="@dimen/textParrafo"
        android:layout_marginVertical="2dp"
        />
    <TextView
        android:id="@+id/tv_nombres"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Nombre completo"
        android:textColor="@color/colorPlumbDark"
        android:textSize="@dimen/textParrafo"
        android:layout_marginVertical="2dp"
        />
    <TextView
        android:id="@+id/tv_titulo_apellidos"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Apellidos"
        android:textColor="@color/colorBlack"
        android:textSize="@dimen/textParrafo"
        android:layout_marginVertical="2dp"
        />
    <TextView
        android:id="@+id/tv_apellidos"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Nombre completo"
        android:textColor="@color/colorPlumbDark"
        android:textSize="@dimen/textParrafo"
        android:layout_marginVertical="2dp"
        />
    <TextView
        android:id="@+id/tv_titulo_celular"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Número de celular"
        android:textColor="@color/colorBlack"
        android:textSize="@dimen/textParrafo"
        android:layout_marginVertical="2dp"
        />
    <TextView
        android:id="@+id/tv_celular"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Número de celular"
        android:textColor="@color/colorPlumbDark"
        android:textSize="@dimen/textParrafo"
        android:layout_marginVertical="2dp"
        />
    <TextView
        android:id="@+id/tv_titulo_correo"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Correo electrónico"
        android:textColor="@color/colorBlack"
        android:textSize="@dimen/textParrafo"
        android:layout_marginVertical="2dp"
        />
    <TextView
        android:id="@+id/tv_correo"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Correo electrónico"
        android:textColor="@color/colorPlumbDark"
        android:textSize="@dimen/textParrafo"
        android:layout_marginVertical="2dp"
        />
    <TextView
        android:id="@+id/tv_titulo_nit"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Nit para la factura"
        android:textColor="@color/colorBlack"
        android:textSize="@dimen/textParrafo"
        android:layout_marginVertical="2dp"
        />
    <TextView
        android:id="@+id/tv_nit"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Nit para la factura"
        android:textColor="@color/colorPlumbDark"
        android:textSize="@dimen/textParrafo"
        android:layout_marginVertical="2dp"
        />
    <TextView
        android:id="@+id/tv_titulo_nombre_factura"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Nombre para la factura"
        android:textColor="@color/colorBlack"
        android:textSize="@dimen/textParrafo"
        android:layout_marginVertical="2dp"
        />
    <TextView
        android:id="@+id/tv_nombre_factura"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Nombre para la factura"
        android:textColor="@color/colorPlumbDark"
        android:textSize="@dimen/textParrafo"
        android:layout_marginVertical="2dp"
        />
    <Button
        android:id="@+id/btn_cambiar_password"
        android:layout_width="match_parent"
        android:layout_height="@dimen/heightButton"
        android:layout_gravity="center"
        android:background="@drawable/button_secondary"
        android:gravity="center"
        android:text="Cambiar contraseña"
        android:textSize="@dimen/textParrafo"
        android:textAllCaps="false"
        android:textColor="@color/colorPrimary"
        android:layout_marginTop="20dp"
        android:layout_marginBottom="10dp"
        />
    <Button
        android:id="@+id/btn_editar"
        android:layout_width="match_parent"
        android:layout_height="@dimen/heightButton"
        android:layout_gravity="center"
        android:background="@drawable/button_primary"
        android:gravity="center"
        android:text="Editar perfil"
        android:textSize="@dimen/textParrafo"
        android:textAllCaps="false"
        android:textColor="@color/colorWhite"
        android:layout_marginTop="10dp"
        />
</LinearLayout>